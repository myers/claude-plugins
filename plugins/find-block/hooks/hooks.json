{
  "description": "Security hook that blocks the find command and suggests using Glob/Grep tools instead",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/block-find.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
